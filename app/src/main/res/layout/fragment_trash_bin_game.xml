<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_trash_game"
    tools:context=".TrashBinGame"
    android:id="@+id/relative_layout">

    <!--<ImageView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:baselineAlignBottom="true"
        android:scaleType="fitXY"
        android:src="@drawable/erba_png" />-->
    <TextView
        android:id="@+id/txt_score"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/score_background"
        android:textColor="@color/white"
        android:text="0"
        android:textSize="34sp"/>


    <RelativeLayout
        android:id="@+id/game_over_screen"
        android:layout_width="240dp"
        android:layout_height="150dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_background"
        android:visibility="invisible">
        <TextView
            android:id="@+id/txt_game_over"
            android:text="Game Over"
            android:background="@android:color/transparent"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="30sp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="14dp"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/txt_final_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignTop="@id/txt_game_over"
            android:textSize="30sp"
            android:layout_marginTop="26dp"
            android:textColor="@color/white"
            android:background="@android:color/transparent"/>
            <ImageButton
                android:id="@+id/restart_game_button"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:layout_alignTop="@id/txt_final_score"
                android:layout_marginTop="50dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_baseline_play_arrow_24"
                android:background="@drawable/btn_background"
                android:scaleType="fitCenter"
                />
    </RelativeLayout>

    <ImageView
        android:id="@+id/trash_bin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:cropToPadding="true"
        android:scaleType="centerCrop"
        android:src="@drawable/drawable_recycle_bin" />

    <ImageButton
        android:id="@+id/start_game_button"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_baseline_play_arrow_24"
        android:background="@drawable/btn_background"
        android:scaleType="fitCenter"/>
</RelativeLayout>