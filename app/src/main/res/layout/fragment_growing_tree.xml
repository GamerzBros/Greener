<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GrowingTreeFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/growing_tree_wallpaper" />

    <TextView
        android:id="@+id/total_steps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="57dp"
        android:layout_marginEnd="66dp"
        android:text="0"
        android:textSize="34sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp" />

        <!--<ImageView
            android:id="@+id/watering_can_img"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            android:src="@drawable/watering_can_image" />-->

    <ImageView
        android:layout_width="350dp"
        android:layout_height="650dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter"
        android:src="@drawable/tree_frame_0" />

    <ImageView
        android:id="@+id/watering_can_container"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="250dp"
        android:layout_marginStart="6dp"
        android:layout_alignParentStart="true"
        android:src="@drawable/green_sphere"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/watering_can"
        android:layout_width="145dp"
        android:layout_height="145dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12.5dp"
        android:layout_marginTop="224dp"
        android:visibility="visible"
        app:lottie_loop="false"
        app:lottie_rawRes="@raw/watering_can" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="91dp"
        android:layout_marginBottom="56dp"
        android:text="Start" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="75dp"
        android:layout_marginBottom="60dp"
        android:text="Stop" />

</RelativeLayout>