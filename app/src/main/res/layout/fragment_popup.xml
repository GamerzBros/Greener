<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:src="@drawable/trash_day_icon"/>

        <!--RL testo-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@color/colo1">

            <TextView
                android:id="@+id/txt_popup1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:padding="6dp"
                android:text="Inizia subito a popolare il tuo calendario!"
                android:textAlignment="center"
                android:textSize="23sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_popup1"
                android:layout_alignParentBottom="true"
                android:padding="7dp"
                android:text="Compila il form selezionando, per ogni giorno, il rifiuto che bisogna mettere fuori nel tuo comune."
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="italic" />

        </RelativeLayout>

        <!--RL form-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/txb_background"
            android:backgroundTint="@color/colo2"
            android:layout_margin="20dp">

            <!--RL Lunedì-->
            <RelativeLayout
                android:id="@+id/RLlunedi"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_margin="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/txb_background"
                android:elevation="8dp">

                <TextView
                    android:id="@+id/txt_popD1"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="150dp"
                    android:layout_marginTop="10dp"
                    android:text="Lunedì"
                    android:textAlignment="center"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spin_day1"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_popD1"
                    android:layout_centerHorizontal="true"
                    android:entries="@array/Rifiuti" />

            </RelativeLayout>

            <!--RL Martedì-->
            <RelativeLayout
                android:id="@+id/RLmartedi"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_below="@id/RLlunedi"
                android:layout_margin="20dp"
                android:background="@drawable/txb_background"
                android:elevation="8dp">

                <TextView
                    android:id="@+id/txt_popD2"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="150dp"
                    android:layout_marginTop="15dp"
                    android:text="Martedì"
                    android:textAlignment="center"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spin_day2"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_popD2"
                    android:layout_centerHorizontal="true"
                    android:entries="@array/Rifiuti" />

            </RelativeLayout>

            <!--RLmercoledi-->
            <RelativeLayout
                android:id="@+id/RLmercoledi"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_below="@id/RLmartedi"
                android:layout_margin="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/txb_background"
                android:elevation="8dp">

                <TextView
                    android:id="@+id/txt_popD3"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="150dp"
                    android:layout_marginTop="10dp"
                    android:text="Mercoledì"
                    android:textAlignment="center"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spin_day3"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_popD3"
                    android:layout_centerHorizontal="true"
                    android:entries="@array/Rifiuti" />

            </RelativeLayout>

            <!--RLgiovedi-->
            <RelativeLayout
                android:id="@+id/RLgiovedi"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_below="@id/RLmercoledi"
                android:layout_margin="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/txb_background"
                android:elevation="8dp">

                <TextView
                    android:id="@+id/txt_popD4"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="150dp"
                    android:layout_marginTop="10dp"
                    android:text="Giovedì"
                    android:textAlignment="center"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spin_day4"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_popD4"
                    android:layout_centerHorizontal="true"
                    android:entries="@array/Rifiuti" />

            </RelativeLayout>

            <!--RLvenerdi-->
            <RelativeLayout
                android:id="@+id/RLvenerdi"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_below="@id/RLgiovedi"
                android:background="@drawable/txb_background"
                android:layout_margin="20dp"
                android:elevation="8dp">

                <TextView
                    android:id="@+id/txt_popD5"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="150dp"
                    android:layout_marginTop="10dp"
                    android:text="Venerdì"
                    android:textAlignment="center"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spin_day5"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_popD5"
                    android:layout_centerHorizontal="true"
                    android:entries="@array/Rifiuti" />

            </RelativeLayout>

            <!--RLsabato-->
            <RelativeLayout
                android:id="@+id/RLsabato"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_below="@id/RLvenerdi"
                android:background="@drawable/txb_background"
                android:layout_margin="20dp"
                android:elevation="8dp">

                <TextView
                    android:id="@+id/txt_popD6"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="150dp"
                    android:layout_marginTop="10dp"
                    android:text="Sabato"
                    android:textAlignment="center"
                    android:layout_centerHorizontal="true"
                    android:textSize="17sp"
                    android:textStyle="bold"/>

                <Spinner
                    android:id="@+id/spin_day6"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_popD6"
                    android:layout_centerHorizontal="true"
                    android:entries="@array/Rifiuti" />

            </RelativeLayout>

            <!--RLdomenica-->
            <RelativeLayout
                android:id="@+id/RLdomenica"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_below="@id/RLsabato"
                android:layout_margin="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/txb_background"
                android:elevation="8dp">

                <TextView
                    android:id="@+id/txt_popD7"
                    android:layout_width="160dp"
                    android:layout_height="43dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="150dp"
                    android:layout_marginTop="10dp"
                    android:text="Domenica"
                    android:textAlignment="center"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spin_day7"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_popD7"
                    android:layout_centerHorizontal="true"
                    android:entries="@array/Rifiuti" />

            </RelativeLayout>

            <!--RLbutton-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@id/RLdomenica"
                android:layout_margin="20dp"
                android:background="@drawable/txb_background"
                android:backgroundTint="@color/colo2"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_popInvio"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:background="@drawable/txb_background"
                    android:elevation="8dp"
                    android:text="Popola ora!" />

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

</ScrollView>