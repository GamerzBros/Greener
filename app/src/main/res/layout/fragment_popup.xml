            android:layout_height="100dp"
            android:background="@color/colo2">

            <TextView
                android:id="@+id/txt_popD6"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="10dp"
                android:text="Sabato"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <Spinner
                android:id="@+id/spin_day6"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_popD6"
                android:layout_centerHorizontal="true"
                android:entries="@array/Rifiuti" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/colo2">

            <TextView
                android:id="@+id/txt_popD7"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="10dp"
                android:text="Domenica"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <Spinner
                android:id="@+id/spin_day7"
