<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A9BCDF"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CalculatorFragment">

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--RL padre e contenitore Journey Mode-->
        <RelativeLayout
            android:id="@+id/RL_Padre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#A9BCDF"
            android:elevation="8dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/img1footprint"
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                android:layout_height="250dp"
                android:layout_marginTop="0dp"
                android:elevation="8dp"
                app:shapeAppearanceOverlay="@style/roundedCorners"
                app:srcCompat="@drawable/bg_footprint" />

            <TextView
                android:id="@+id/txt_journeyMode"
                android:layout_width="270dp"
                android:layout_height="50dp"
                android:layout_below="@id/img1footprint"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                android:text="Journey Mode"
                android:textSize="35sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_info1"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_below="@id/txt_journeyMode"
                android:layout_marginLeft="25dp"
                android:text="Seleziona il metodo di trasporto che utilizzi piÃ¹ spesso."
                android:textSize="17sp"
                android:textStyle="normal" />

            <!--RL generale-->
            <RelativeLayout
                android:id="@+id/RLgenerale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_info1"
                android:layout_margin="10dp"
                android:background="@drawable/txb_background">

                <!--RL che contiene la gridV-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:background="@drawable/txb_background"
                    android:elevation="8dp">

                    <GridLayout
                        android:layout_width="380dp"
                        android:layout_height="270dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="20dp"
                        android:columnCount="3"
                        android:rowCount="2">

                        <!--CARD auto-->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cvAuto"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_rowWeight="1"
                            android:layout_columnWeight="1"
                            android:layout_margin="5dp"
                            android:checkable="true"
                            android:clickable="true"
                            android:focusable="true"
                            app:cardBackgroundColor="@color/yellowPlastica"
                            app:cardCornerRadius="25dp"
                            app:cardElevation="3dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:layout_centerInParent="true"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/car_footprint" />

                            </RelativeLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <!--CARD bus-->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cvBus"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_rowWeight="1"
                            android:layout_columnWeight="1"
                            android:layout_margin="5dp"
                            android:checkable="true"
                            android:clickable="true"
                            android:focusable="true"
                            app:cardBackgroundColor="#BBE0F8"
                            app:cardCornerRadius="25dp"
                            app:cardElevation="3dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:layout_centerInParent="true"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/bus_footprint" />

                            </RelativeLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <!--CARD treno-->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cvTrain"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_rowWeight="1"
                            android:layout_columnWeight="1"
                            android:layout_margin="5dp"
                            android:checkable="true"
                            android:clickable="true"
                            android:focusable="true"
                            app:cardBackgroundColor="#D9E0EE"
                            app:cardCornerRadius="25dp"
                            app:cardElevation="3dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:layout_centerInParent="true"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/train_footprint" />

                            </RelativeLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <!--CARD taxi-->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cvTaxi"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_rowWeight="1"
                            android:layout_columnWeight="1"
                            android:layout_margin="5dp"
                            android:checkable="true"
                            android:clickable="true"
                            android:focusable="true"
                            app:cardBackgroundColor="#D9EDF2"
                            app:cardCornerRadius="25dp"
                            app:cardElevation="3dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:layout_centerInParent="true"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/taxi_footprint" />

                            </RelativeLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <!--CARD moto-->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cvMoto"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_rowWeight="1"
                            android:layout_columnWeight="1"
                            android:layout_margin="5dp"
                            android:checkable="true"
                            android:clickable="true"
                            android:focusable="true"
                            app:cardBackgroundColor="#BAC7BE"
                            app:cardCornerRadius="25dp"
                            app:cardElevation="3dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:layout_centerInParent="true"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/moto_footprint" />

                            </RelativeLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <!--CARD a piedi-->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cvWalk"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_rowWeight="1"
                            android:layout_columnWeight="1"
                            android:layout_margin="5dp"
                            android:checkable="true"
                            android:clickable="true"
                            android:focusable="true"
                            app:cardBackgroundColor="#ECF4FA"
                            app:cardCornerRadius="25dp"
                            app:cardElevation="3dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:layout_centerInParent="true"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/walk_footprint" />

                            </RelativeLayout>

                        </com.google.android.material.card.MaterialCardView>

                    </GridLayout>

                </RelativeLayout>

            </RelativeLayout>


            <!--RL contenitore Journey Time-->
            <RelativeLayout
                android:id="@+id/Rl_journeyTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:layout_below="@id/RLgenerale"
                android:background="@drawable/txb_background"
                android:backgroundTint="#344779">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/img2footprint"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:scaleType="centerCrop"
                    android:elevation="8dp"
                    android:layout_marginTop="0dp"
                    app:shapeAppearanceOverlay="@style/roundedCorners"
                    app:srcCompat="@drawable/road_bg_footprint"/>

                <TextView
                    android:id="@+id/txt_journeyTime"
                    android:layout_width="270dp"
                    android:layout_height="50dp"
                    android:layout_below="@id/img2footprint"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"
                    android:text="Journey Time"
                    android:textSize="35sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_info2"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:layout_below="@id/txt_journeyTime"
                    android:layout_marginLeft="25dp"
                    android:text="Di media, quanto tempo spendi al giorno viaggiando?"
                    android:textSize="17sp"
                    android:textStyle="normal" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_below="@id/txt_info2"
                    android:layout_margin="10dp"
                    android:background="@drawable/txb_background">

                    <TimePicker
                        android:id="@+id/timePicker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:timePickerMode="spinner"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/txb_background"
                        android:elevation="8dp"/>

                </RelativeLayout>

            </RelativeLayout>

            <!--RL contenitore Voli-->
            <RelativeLayout
                android:id="@+id/RL_voli"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:layout_below="@id/Rl_journeyTime"
                android:background="@drawable/txb_background"
                android:backgroundTint="#7E9E9A">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/img3footprint"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:scaleType="centerCrop"
                    android:elevation="8dp"
                    android:layout_marginTop="0dp"
                    app:shapeAppearanceOverlay="@style/roundedCorners"
                    app:srcCompat="@drawable/airport_footprint"/>

                <TextView
                    android:id="@+id/txt_voli"
                    android:layout_width="270dp"
                    android:layout_height="50dp"
                    android:layout_below="@id/img3footprint"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"
                    android:text="Your Flights"
                    android:textSize="35sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_info3"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:layout_below="@id/txt_voli"
                    android:layout_marginLeft="25dp"
                    android:text="Quanti voli prendi ogni anno? ricordati di fare x2 se conti anche il ritorno."
                    android:textSize="17sp"
                    android:textStyle="normal" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_below="@id/txt_info3"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/txb_background">

                    <!--linear voli corti-->
                    <LinearLayout
                        android:id="@+id/linear_volocorto"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_volocorto"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/volo_uno" />

                        <LinearLayout
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txt_volocorto"
                                android:layout_width="100dp"
                                android:layout_height="30dp"
                                android:layout_marginTop="18dp"
                                android:layout_marginLeft="10dp"
                                android:text="Corto"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="40dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="-5dp"
                                android:text="fino a 3 ore di volo"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <!--spacer view per allineare il tutto a destra-->
                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"/>

                        <Button
                            android:id="@+id/btn_minusCorto"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/txb_background"
                            android:backgroundTint="@color/colo1"
                            android:layout_gravity="center"
                            android:text="-"
                            android:textSize="15sp"/>

                        <TextView
                            android:id="@+id/txt_nticketCorto"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:text="0"
                            android:textStyle="bold"/>

                        <Button
                            android:id="@+id/btn_plusCorto"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginRight="15dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/txb_background"
                            android:backgroundTint="@color/colo1"
                            android:text="+"
                            android:textSize="15sp"/>

                    </LinearLayout>

                    <!--linear voli medi-->
                    <LinearLayout
                        android:id="@+id/linear_volomedio"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_below="@id/linear_volocorto"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_volomedio"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/volo_due" />

                        <LinearLayout
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txt_volomedio"
                                android:layout_width="100dp"
                                android:layout_height="30dp"
                                android:layout_marginTop="18dp"
                                android:layout_marginLeft="10dp"
                                android:text="Medio"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="155dp"
                                android:layout_height="40dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="-5dp"
                                android:text="dalle 3 alle 6 ore di volo"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <!--spacer view per allineare il tutto a destra-->
                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"/>

                        <Button
                            android:id="@+id/btn_minusMedio"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:background="@drawable/txb_background"
                            android:backgroundTint="@color/colo1"
                            android:text="-"
                            android:textSize="15sp"/>

                        <TextView
                            android:id="@+id/txt_nticketMedio"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:text="0"
                            android:textStyle="bold"/>

                        <Button
                            android:id="@+id/btn_plusMedio"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginRight="15dp"
                            android:layout_gravity="center"
                            android:background="@drawable/txb_background"
                            android:backgroundTint="@color/colo1"
                            android:text="+"
                            android:textSize="15sp"/>

                    </LinearLayout>

                    <!--linear voli lunghi-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_below="@id/linear_volomedio"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_vololungo"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/volo_tre" />

                        <LinearLayout
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txt_vololungo"
                                android:layout_width="100dp"
                                android:layout_height="30dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="18dp"
                                android:text="Lungo"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="40dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="-5dp"
                                android:text="6+ ore"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <!--spacer view per allineare il tutto a destra-->
                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"/>

                        <Button
                            android:id="@+id/btn_minusLungo"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:background="@drawable/txb_background"
                            android:backgroundTint="@color/colo1"
                            android:text="-"
                            android:textSize="15sp"/>

                        <TextView
                            android:id="@+id/txt_nticketLungo"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:text="0"
                            android:textStyle="bold"/>

                        <Button
                            android:id="@+id/btn_plusLungo"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginRight="15dp"
                            android:layout_gravity="center"
                            android:background="@drawable/txb_background"
                            android:backgroundTint="@color/colo1"
                            android:text="+"
                            android:textSize="15sp"/>

                    </LinearLayout>

                </RelativeLayout>

            </RelativeLayout>


            <!--<Button
                android:id="@+id/btn_prova"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/Rl_journeyTime"
                android:text="calcola"/>-->

        </RelativeLayout>

    </LinearLayout>

</ScrollView>