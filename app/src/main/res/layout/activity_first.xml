<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".First_Activity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:elevation="2dp"
        android:layout_marginTop="-90dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/logo_app"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:flow_horizontalAlign="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_debug_first"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:text="SCHERMATA DEBUG"
        app:layout_constraintBottom_toTopOf="@+id/slogan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="290dp"/>

    <ImageView
        android:id="@+id/slogan"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_below="@id/logo"
        android:layout_marginTop="290dp"
        android:elevation="2dp"
        android:src="@drawable/slogan_verde"
        app:flow_horizontalAlign="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:text="Green is for Hope just as Gray is for Death"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="-90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo" />

    <Button
        android:id="@+id/btn_firstLogin"
        android:layout_width="160dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        android:layout_marginRight="180dp"
        android:background="@drawable/btn_rounded_green_bg"
        android:backgroundTint="@color/greenLogin"
        android:text="LOGIN"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginBottom="100dp"/>

    <Button
        android:id="@+id/btn_firstSignup"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:background="@drawable/btn_rounded_green_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        android:layout_marginLeft="180dp"
        android:textStyle="bold"
        android:text="SIGNUP"
        android:textColor="@color/white"
        android:layout_marginBottom="100dp"/>

    <TextView
        android:id="@+id/txt_who"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="WHO WE ARE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/slogan"
        app:flow_horizontalAlign="center"
        android:textAlignment="center"
        android:layout_marginTop="70dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>